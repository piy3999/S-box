<?xml version="1.0" encoding="utf-8"?>

<!--main layout-->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/basicblack"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.piyusharyan.s_box.LoginActivity">

    <!--FB-->

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="33dp"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

    <!--Google-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:id="@+id/google_button"
        android:background="@color/googleRed"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:paddingLeft="5dp"
            android:text="g"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Continue with Google"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"

            />

    </RelativeLayout>

    <!--OR-->

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginTop="62dp"
    android:background="@color/basicblack"
    android:id="@+id/ll1"
    
    >
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:text="OR"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        />
    
</LinearLayout>

    <!--Email-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ll1"
        android:background="#2e2f33"
        android:orientation="vertical"
        android:id="@+id/ll2"
        >
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1c1c1e"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@color/basicblack"
                android:layout_gravity="center"
                android:src="@drawable/email"
                android:layout_marginLeft="10dp"
                android:paddingLeft="5dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:background="@null"
                android:id="@+id/email"
                android:gravity="center"
                android:hint="Enter Your Email"
                android:textColor="@color/white"
                android:textCursorDrawable="@null"
                android:textColorHint="@color/white"
                android:textSize="15sp"
                />

            
        </LinearLayout>
        
    </LinearLayout>

    <!--GAP-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:orientation="vertical"
        android:layout_below="@+id/ll2"
        android:id="@+id/ll3"
        android:background="@color/basicblack"

        >
    </LinearLayout>

    <!--Password-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll3"
        android:id="@+id/ll4"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:background="#2e2f33"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#1c1c1e"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@color/basicblack"
                android:layout_gravity="center"
                android:paddingLeft="5dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/password"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:background="@null"
                android:id="@+id/password"
                android:hint="Enter Your Password"
                android:textColorHint="@color/white"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="15sp"
                />
        </LinearLayout>

    </LinearLayout>

    <!--Gap-->

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:layout_below="@+id/ll4"
        android:orientation="vertical"
    android:id="@+id/ll5"
    android:background="@color/basicblack"

    >
</LinearLayout>

    <!--LOGIN-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll5"
        android:id="@+id/login"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/neon"
            android:text="LOG IN"
            android:textSize="30sp"
            android:gravity="center"
            android:textStyle="bold"
            android:id="@+id/sj"
            android:textColor="@color/white"
            />



    </RelativeLayout>

    <!--GAP-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:orientation="horizontal"
        android:layout_below="@+id/login"
        android:id="@+id/ll6"
        android:background="@color/basicblack"

        >
    </LinearLayout>
<!--Signup-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1c1c1e"
        android:layout_below="@+id/ll6"
        android:id="@+id/ll7"
        >
        <TextView
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:text="Not yet registered?"
            android:textColor="@color/white"
            />

        <TextView
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:text="SIGN UP    Now!"
            android:textColor="@color/white"
            android:textStyle="bold"


        />

    </LinearLayout>

    <!--WhiteLine-->

    <LinearLayout
        android:layout_width="55dp"
        android:layout_height="2dp"
        android:layout_below="@+id/ll7"
        android:layout_alignParentLeft="true"
        android:background="@color/white"
        android:layout_marginLeft="150dp"
        >

    </LinearLayout>

    </RelativeLayout>

